<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Prompts</title>
  <style>
    :root {
      --bg: #0d1117;
      --surface: #161b22;
      --text: #e6edf3;
      --primary: #58a6ff;
      --border: #30363d;
    }

    * {
      box-sizing: border-box;
    }

    body {
      background-color: var(--bg);
      color: var(--text);
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 2rem;
    }

    .container {
      max-width: 1300px;
      margin: auto;
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .top-bar a {
      text-decoration: none;
      color: #fff;
      padding: 10px 24px;
      border-radius: 6px;
      background-color: #1f6feb;
    }

    .prompt-section {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .card {
      background: var(--surface);
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(255, 255, 255, 0.05);
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    h2, h3 {
      margin: 0;
    }

    textarea {
      width: 100%;
      height: 300px;
      background: #0d1117;
      color: var(--text);
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 1rem;
      font-size: 1rem;
      font-family: monospace;
      resize: vertical;
    }

    button {
      background: var(--primary);
      color: #fff;
      border: none;
      padding: 0.6rem 1.2rem;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background: #1f6feb;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="top-bar">
      <h2>üìù Edit Prompts</h2>
      <a href="/test-voice">üîô Back to Recorder</a>
    </div>

    <div class="prompt-section">
      <div class="card">
        <h3>üßπ Clean Voice Prompt</h3>
        <form onsubmit="updatePrompt('clean_voice_prompt'); return false;">
          <textarea id="cleanPromptArea" placeholder="Enter clean voice prompt here..."></textarea>
          <p><strong>Variables:</strong> <code>{voice_text}</code></p>
          <button type="submit">üíæ Update Clean Prompt</button>
        </form>
      </div>

      <div class="card">
        <h3>üìã Form Extract Prompt</h3>
        <form onsubmit="updatePrompt('form_extract_prompt'); return false;">
          <textarea id="formPromptArea" placeholder="Enter form extract prompt here..."></textarea>
          <p><strong>Variables:</strong> <code>{form_format}</code>, <code>{text}</code></p>
          <button type="submit">üíæ Update Extract Prompt</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    window.onload = async () => {
      const res = await fetch('/prompts');
      const data = await res.json();
      document.getElementById('cleanPromptArea').value = data.clean_voice_prompt;
      document.getElementById('formPromptArea').value = data.form_extract_prompt;
    };

    async function updatePrompt(type) {
      const textareaId = type === 'clean_voice_prompt' ? 'cleanPromptArea' : 'formPromptArea';
      const content = document.getElementById(textareaId).value;

      const res = await fetch('/prompts/update', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ type, content })
      });

      if (res.ok) {
        alert('‚úÖ Prompt updated successfully');
      } else {
        alert('‚ùå Failed to update prompt');
      }
    }
  </script>
</body>
</html>
